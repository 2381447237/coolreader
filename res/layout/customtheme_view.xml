<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/fontColorTxt"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="字体颜色"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
     	<TextView 
     	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="R:"
        	android:textSize="25dp"
     	    />
	    <SeekBar 
	        android:id="@+id/redForegroundSeekBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:max="255"
	        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
     	<TextView 
     	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="G:"
        	android:textSize="25dp"
     	    />
	    <SeekBar 
	        android:id="@+id/greenForegroundSeekBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:max="255"
	        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
     	<TextView 
     	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="B:"
        	android:textSize="25dp"
     	    />
	    <SeekBar 
	        android:id="@+id/blueForegroundSeekBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:max="255"
	        />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
     	<TextView 
     	    android:id="@+id/themeStyleTxt"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textSize="25dp"
		    android:text="ThemeStyle"
		    android:paddingLeft="70dp"
        />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/backgroundColorTxt"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="背景颜色"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
     	<TextView 
     	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="R:"
        	android:textSize="25dp"
     	    />
	    <SeekBar 
	        android:id="@+id/redBackgroundSeekBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:max="255"
	        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
     	<TextView 
     	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="G:"
        	android:textSize="25dp"
     	    />
	    <SeekBar 
	        android:id="@+id/greenBackgroundSeekBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:max="255"
	        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
     	<TextView 
     	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="B:"
        	android:textSize="25dp"
     	    />
	    <SeekBar 
	        android:id="@+id/blueBackgroundSeekBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:max="255"
	        />
    </LinearLayout>

</LinearLayout>